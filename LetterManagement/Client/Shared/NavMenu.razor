@using LetterManagement.Client.StateContainer
@using LetterManagement.Shared.Models
@inject UserState UserState;
<MudNavMenu>
    <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Trang chính</MudNavLink>
    <MudNavLink Href="templateList" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.List">Mẫu đơn</MudNavLink>
    @if (UserState.Role == Roles.Student)
    {
        <MudNavLink Href="studentLetterList" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Send">Đơn đã gửi</MudNavLink>
    }
    else
    {
        <MudNavLink Href="managerLetterList" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Send">Đơn đảm nhận</MudNavLink>
    }
</MudNavMenu>

@code
{
    protected override void OnInitialized()
    {
        UserState.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        UserState.OnChange -= StateHasChanged;

    }
}
