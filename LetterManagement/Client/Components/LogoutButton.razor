@using LetterManagement.Client.StateContainer;
@inject NavigationManager NavigationManager;
@inject UserState UserState;
@inject Blazored.LocalStorage.ILocalStorageService localStorage;


<MudIconButton Icon="@Icons.Material.Filled.Logout" Color="Color.Inherit" OnClick="ProcessLogout"/>

@code {
    private async void ProcessLogout()
    {
        this.UserState.ClearState();

        await this.localStorage.ClearAsync();

        NavigationManager.NavigateTo("/login");
    }
}
